{% block body %}

    {% for task in tasks %}
        <!-- Modal -->
        <div class="modal fade" id="editTaskDone{{ task.id }}" tabindex="-1" role="dialog"
             aria-labelledby="exampleModalCenterTitle" data-target="{{ task.id }}"
             aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-secondary text-white">
                        <h5 class="modal-title " id="exampleModalCenterTitle">Modifier {{ task.user.name }}</h5>
                        <button type="button" class="close editTaskList text-white" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body bg-light">
                        <form class="form-group" id="editTaskAdmin">
                            <div >
                                <label for="titre">Titre</label>
                                <input name="title"
                                       type="text"
                                       class="form-control title{{ task.id }}"
                                       placeholder="Saisir le titre ..."
                                       value="{{ task.title }}"

                                />
                            </div>

                            <div>
                                <label for="description" class="mt-3">Description de la t√¢che</label>
                                <textarea class="form-control content{{ task.id}} "
                                          name="content"
                                          cols="30"
                                          rows="5"
                                          wrap="hard"

                                > {{ task.content}} </textarea>

                            </div>

                            <button type="button"
                                    class="btn btn-sm btn-primary mt-2 btnEdit" data-target="{{ task.id }}">
                                Modifier
                            </button>

                        </form>
                    </div>
                </div>
            </div>
        </div>

    {% endfor %}
{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="{{ asset('js/editTaskAdmin.js') }}"></script>
    <script src="{{ asset('js/redirect.js') }}"></script>
    <script src="{{ asset('js/toast.js') }}"></script>
{% endblock %}